#----------------------------------------------------------------------------------------------------

onready var animation = $"animation"
onready var sprite = $"sprite"


var fog = true
var discovered = false
var active = false

var state = null


#----------------------------------------------------------------------------------------------------
# _on_fow_body
#----------------------------------------------------------------------------------------------------

#-------------------------
# _entered
#-------------------------

func _on_fow_body_entered(body):

	if !discovered:
		animation.play("first")
		discovered = true

	else:
		animation.play("show")


#-------------------------
# _exited
#-------------------------

func _on_fow_body_exited(body):
	animation.play("hide")



